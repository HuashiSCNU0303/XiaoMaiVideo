<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/select_elevation"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:paddingStart="30dp"
    android:paddingEnd="30dp">

    <ImageView
        android:id="@+id/bottomDialogImage"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/success" />

    <TextView
        android:id="@+id/bottomDialogText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:text="发布成功"
        android:textAlignment="center"
        android:textColor="@color/black_21"
        android:textSize="20sp"
        android:textStyle="bold" />

    <de.mustafagercek.library.LoadingButton
        android:id="@+id/atButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        app:buttonColor="@color/warmyellow"
        app:buttonText="分享给其他人"
        app:textColor="@color/white" />

</LinearLayout>

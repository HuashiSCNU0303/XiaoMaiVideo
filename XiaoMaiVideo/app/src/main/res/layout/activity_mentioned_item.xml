<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mentioned_image"
        android:layout_width="72dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/mentioned_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/mentioned_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mentioned_content"
        android:layout_width="279dp"
        android:layout_height="19dp"
        android:layout_marginStart="24dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/mentioned_image"
        app:layout_constraintTop_toBottomOf="@+id/mentioned_name" />

    <TextView
        android:id="@+id/mentioned_date"
        android:layout_width="46dp"
        android:layout_height="14dp"
        android:layout_marginStart="24dp"
        android:text="TextView"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/mentioned_image"
        app:layout_constraintTop_toBottomOf="@+id/mentioned_content" />
</androidx.constraintlayout.widget.ConstraintLayout>